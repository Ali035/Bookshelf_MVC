@model List<Product>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2>
                Product List
            </h2>
        </div>
        <div class="col-6 text-end align-self-center">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle pe-2"></i>  Create New Product
            </a>
        </div>
    </div>

    <!-- Your Data Grid container -->
    <div id="myGrid" style="width: 100%; height: 450px" class="ag-theme-quartz-dark"></div>

</div>



@section Scripts{
    <script src="~/js/product.js" ></script>
}